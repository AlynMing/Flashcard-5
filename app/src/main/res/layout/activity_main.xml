<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/theChicken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="167dp"
        android:background="#89CF"
        android:gravity="center"
        android:text="The chicken"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/flashcard_questions"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_rectangle"
        android:gravity="center"
        android:text="What comes first the chicken or the egg?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theEgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="236dp"
        android:background="#89CF"
        android:gravity="center"
        android:text="The egg"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/neither"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:background="#89CF"
        android:gravity="center"
        android:text="Neither"
        android:textAlignment="center"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_iconmonstr_plus_6" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/ic_iconmonstr_edit_11" />

    <ImageView
        android:id="@+id/hide"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_iconmonstr_eye_8" />

    <ImageView
        android:id="@+id/open"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_iconmonstr_eye_5" />


</RelativeLayout>