<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">


    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        app:srcCompat="@drawable/ic_iconmonstr_x_mark_5" />

    <EditText
        android:id="@+id/questionText"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:hint="Question"
        android:inputType="textMultiLine"
        android:text="Question" />

    <EditText
        android:id="@+id/answerText"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/questionText"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Enter answer here"
        android:inputType="textMultiLine"
        android:text="Answer" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="57dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/questionText"
        app:srcCompat="@drawable/ic_iconmonstr_save_thin" />

    <EditText
        android:id="@+id/wrongAnswer1"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter wrong answer here"
        android:inputType="textMultiLine"
        android:text="Wrong Answer" />

    <EditText
        android:id="@+id/wrongAnswer2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="236dp"
        android:ems="10"
        android:hint="Enter wrong answer here"
        android:inputType="textMultiLine"
        android:text="Wrong Answer" />

</RelativeLayout>